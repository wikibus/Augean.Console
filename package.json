{
  "scripts": {
    "start": "ws -s index.html -p 8080",
    "bundle": "jspm bundle src/augean-console dist/augean.console.js --minify",
    "minify": "html-minifier dist/augean.console.html -o dist/augean.console.min.html --collapse-whitespace --minify-css --remove-comments --collapse-boolean-attributes --collapse-inline-tag-whitespace --decode-entities --html5 --minify-js --minify-ur-ls --remove-attribute-quote --remove-empty-attributes --remove-optional-tags --remove-script-type-attributes --remove-link-type-attributes --remove-tag-whitespace --use-short-doctype",
    "postinstall": "npm i -g bower jspm vulcanize local-web-server html-minifier htmlprocessor && bower i && jspm i",
    "heroku-postbuild": "mkdir dist && npm run bundle && npm run minify && htmlprocessor index.html -o index.html"
  },
  "cacheDirectories": [
    "jspm_packages",
    "bower_components",
    "node_modules"
  ],
  "jspm": {
    "dependencies": {
      "augeas": "github:wikibus/augeas@^0.1.0",
      "heracles": "npm:heracles@0.1.2-pre04",
      "html": "github:Hypercubed/systemjs-plugin-html@^0.0.8",
      "jasnell/linkeddata-vocabs": "github:jasnell/linkeddata-vocabs@^0.10.0",
      "jsonld": "npm:jsonld@^0.4.11",
      "lodash": "npm:lodash@^4.11.1",
      "rdf-ext": "npm:rdf-ext@^0.3.0",
      "request": "npm:request@^2.74.0"
    },
    "devDependencies": {
      "typescript": "npm:typescript@^1.6.2"
    }
  }
}
